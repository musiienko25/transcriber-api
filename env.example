# Application
APP_NAME=Transcriber API
DEBUG=false
DEV_MODE=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# API Keys (comma-separated list)
API_KEYS=your-api-key-here

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Redis
REDIS_URL=redis://localhost:6379/0

# Whisper Model
WHISPER_MODEL=base
WHISPER_DEVICE=auto
WHISPER_COMPUTE_TYPE=auto

# ASR Provider (local, openai, deepgram, assemblyai)
ASR_PROVIDER=local
ASR_SYNC_MAX_DURATION=600

# External ASR API Keys (optional)
# OPENAI_API_KEY=sk-...
# DEEPGRAM_API_KEY=...
# ASSEMBLYAI_API_KEY=...

# Runpod (for Level 3)
# RUNPOD_API_KEY=...
# RUNPOD_ENDPOINT_ID=...

# S3/R2 Storage (optional)
# S3_ENDPOINT_URL=https://...
# S3_ACCESS_KEY=...
# S3_SECRET_KEY=...
# S3_BUCKET=transcriber-media

# File Upload
MAX_UPLOAD_SIZE_MB=500
TEMP_DIR=/tmp/transcriber
